@model CreateClientModel
<section>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, Model.NameLabelText)
            @Html.TextBoxFor(m => Model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Code, Model.CodeLabelText)
            @Html.TextBoxFor(m => Model.Code)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Status, Model.StatusLabelText)
            @Html.EnumDropDownListFor(m => m.Status)
        </div>
        <hr />
        <div class="navbar-form">
            <input type="submit" value="Save" />
        </div>
    }
</section>